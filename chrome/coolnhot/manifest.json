{
   "manifest_version": 2,

   "name": "Cool'n'Hot Displayer",
   "description": "This extension displays your home temperature and relative humidity",
   "version": "1.0",
   "icons": {
      "16" : "images/icon_16.png",
      "32" : "images/icon_32.png",
      "64" : "images/icon_64.png"
   },
   "background": {
      "scripts": ["libs/jquery/dist/jquery.min.js", "js/background.js"]
   },
   "options_ui": {
      // Required.
      "page": "options.html",
      // Recommended.
      "chrome_style": true
      // Not recommended; only provided for backwards compatibility,
      // and will be unsupported in a future version of Chrome (TBD).
      //"open_in_tab": true
   },
   "browser_action": {
      "default_icon": "images/icon_64.png"
   },
   "permissions": [
     "background",
     "http://cramike.synology.me/*",
     "http://127.0.0.1:5000/*",
     "storage"
   ]
}